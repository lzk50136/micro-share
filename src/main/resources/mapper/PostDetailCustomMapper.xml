<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.reiam.share.mapper.PostDetailCustomMapper">

    <resultMap id="postDetailResponseResultMap" type="online.reiam.share.response.PostDetailResponse">
        <id property="id" column="id"/>
        <result property="postId" column="post_id"/>
        <result property="sort" column="sort"/>
        <result property="resourceId" column="resource_id"/>
        <association property="resourceResponse" column="resource_id"
                     select="online.reiam.share.mapper.ResourceCustomMapper.selectResourceById">
        </association>
    </resultMap>

    <select id="selectPostDetailListByPostId" resultMap="postDetailResponseResultMap">
        select id,
               post_id,
               sort,
               resource_id
        from post_detail
        where deleted = 0
          AND post_id = #{postId}
    </select>

</mapper>