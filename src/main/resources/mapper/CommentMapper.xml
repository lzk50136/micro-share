<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.reiam.share.mapper.CommentMapper">

    <resultMap id="commentResponseResultMap" type="online.reiam.share.response.CommentResponse">
        <id property="id" column="id"/>
        <result property="typeId" column="type_id"/>
        <result property="userId" column="user_id"/>
        <result property="content" column="content"/>
        <result property="likesNum" column="likes_num"/>
        <result property="replyNum" column="reply_num"/>
        <result property="replyTo" column="reply_to"/>
        <result property="commentType" column="comment_type"/>
        <result property="modifiedTime" column="modified_time"/>
        <association property="sender" column="user_id"
                     select="online.reiam.share.mapper.UserInfoMapper.selectUserInfoByUserId">
        </association>
        <association property="receiver" column="reply_to"
                     select="online.reiam.share.mapper.UserInfoMapper.selectUserInfoByUserId">
        </association>
    </resultMap>

    <select id="selectCommentListByLikesNum" resultMap="commentResponseResultMap">
        SELECT id,
               type_id,
               user_id,
               content,
               likes_num,
               reply_num,
               reply_to,
               comment_type,
               modified_time
        FROM comment
        WHERE deleted = 0
          AND type_id = #{typeId}
          AND comment_type = #{commentType}
        ORDER BY likes_num DESC
    </select>

    <select id="selectCommentListByModifiedTime" resultMap="commentResponseResultMap">
        SELECT id,
               type_id,
               user_id,
               content,
               likes_num,
               reply_num,
               reply_to,
               comment_type,
               modified_time
        FROM comment
        WHERE deleted = 0
          AND type_id = #{typeId}
          AND comment_type = #{commentType}
        ORDER BY modified_time DESC
    </select>

