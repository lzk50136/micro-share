<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="online.reiam.share.mapper.ResourceCustomMapper">

    <resultMap id="resourceResponseResultMap" type="online.reiam.share.response.ResourceResponse">
        <id property="id" column="id"/>
        <result property="originalName" column="original_name"/>
        <result property="watermarkName" column="watermark_name"/>
        <result property="thumbnailName" column="thumbnail_name"/>
    </resultMap>

    <select id="selectResourceById" resultMap="resourceResponseResultMap">
        select id,
               original_name,
               watermark_name,
               thumbnail_name
        from resource
        where deleted = 0
          AND id = #{id}
    </select>

</mapper>